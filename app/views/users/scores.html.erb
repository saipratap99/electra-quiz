          <%= user.name %>
        </div>
        <div class="col-lg-4">
          <%= user.non_tech_1_score %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-lg-3 col-md-6 col-12 interaction">
    <h1 class="main-head primary-text text-left font-weight-bold text-primary">Non-Technical Level 2</h1>
