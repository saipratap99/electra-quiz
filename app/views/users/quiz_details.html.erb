<div class="quiz-details">
<h2> Participant Details</h2>
<table class="table">
  <tbody>
    <tr>
      <th scope="row">Name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th scope="row">Quiz Type</th>
      <td>
        <% if @quiz_type == "tech" %>
          <%= "Technical" %>
        <% else %>
          <%= "Non-Technical" %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th scope="row">Level</th>
      <td><%= @level %></td>
    </tr>
    <tr>
      <th scope="row">Duration</th>
      <td>20 min</td>
    </tr>
    <tr>
    </tr>
  </tbody>
</table>

<p class="start-btn">
  <% if @user.user_questions.where("ques_type = ? AND level = ? AND is_attempted = ?",@quiz_type,@level,true).count == 0 %>
    <%= link_to "Start", :questions, data: {"disable-with": "Please wait.."}, onclick: 'localStorage.clear()' %>
  <% else %>
    <%= link_to "Start", :questions, data: {"disable-with": "Please wait.."} %>
  <% end %>
</p>
</div>
