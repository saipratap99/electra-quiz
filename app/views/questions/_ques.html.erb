<div class="question" id=<%= "q #{question.id}" %>>
  <div class="ques">
    <p  id="ques"><%= question.question.gsub("\n",'<br>').html_safe %></p>
    <% if has_image %>
      <img src=<%= image %> alt="Image" style="max-width: 200px;max-height: 200px;padding: 5px;" >
    <% end %>
  </div>
  <div class="u">
      <% question.options.each do |opt| %>
        <p style="display: flex;align-items: center; padding: 5px;margin: 5px">
          <% if question.ans == opt.id%>
            <input type="radio" checked="true">
          <% else %>
            <%= radio_button :option, opt.id, class: 'options' %>
          <% end %>
          <% if opt.contains_image %>
            <label for=<%= opt.id.to_s %>>
              <img src=<%= opt.image_url %> alt="Image" style="max-width: 100px;max-height: 100px;padding: 5px;" >
            </label>
          <% else %>
            <%= label opt.id.to_s.to_sym, opt.option %><br>
          <% end %>
        </p>
      <% end %>
  </div>
</div>
